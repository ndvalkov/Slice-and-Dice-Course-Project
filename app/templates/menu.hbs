<main class="main">

  <!--title section-->
  <section class="container-title-page container-fluid">
    <div class="title-page">
      <h2>{{this.type}} menu</h2>
      <p>Fusce nunc diam suscipit a iaculis ac tristique ac erat</p>
    </div>

  </section>

  <!--subheader bar-->
  <section class="container-subheader-bar container-fluid">
    <div class="subheader-bar">

      <ul class="subheader-list">
        <li class="top">Menu</li>
      </ul>

      <form class="search-form pull-right" action="" autocomplete="on">
        <div>
          <input type="text" id="site-search" name="q"
                 placeholder="Search this website..." minlength="4" maxlength="8"/>
          <input id="submit-search" value="Search" type="submit">
          <span class="validity"></span>
        </div>
      </form>

    </div>
  </section>

  <!--content menu-->
  <section class="container-content-menu container">

    <div class="row">

      <div class="menu-appetizers col-md-4">
        <h3 class="menu-title">Appetizers</h3>
        <ul class="menu-list">
          {{#each appetizers}}

            {{#if @first}}

              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-1.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>

            {{else}} {{#if @last}}

              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-2.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>

            {{else}}
              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-3.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>


            {{/if}}{{/if}}

          {{/each}}
        </ul>
      </div>

      <div class="menu-main-courses col-md-4">
        <h3 class="menu-title">Main courses</h3>
        <ul class="menu-list">
          {{#each mainCourses}}

            {{#if @first}}

              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-1.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>

            {{else}} {{#if @last}}

              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-2.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>

            {{else}}
              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-3.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>


            {{/if}}{{/if}}

          {{/each}}
        </ul>
      </div>

      <div class="menu-desserts col-md-4">
        <h3 class="menu-title">Desserts</h3>
        <ul class="menu-list">
          {{#each desserts}}

            {{#if @first}}

              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-3.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>

            {{else}} {{#if @last}}

              <li class="menu-item">
                <div class="price-tag"><span class="price">{{this.price}}</span></div>
                <img class="food-image img-thumbnail pull-left" src="../images/food-placeholder-2.jpeg" alt="food"/>
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
              </li>

            {{else}}


            {{/if}}{{/if}}

          {{/each}}

        </ul>
      </div>

    </div> <!--row-->

  </section>

</main>

